generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email     String   @id
  provider  String
  createdAt DateTime @default(now())
  book      Book[]
  library   Library[]
  review    Review[]
}

model Book {
  id        Int      @id @default(autoincrement())
  name      String
  isbn      String
  author    String
  publisher String
  user      User     @relation(fields: [userId], references: [email])
  userId    String
}

model Library {
  id        Int      @id @default(autoincrement())
  name      String
  code      String
  region    Int
  user      User     @relation(fields: [userId], references: [email])
  userId    String
}

model Review {
  id          Int         @id @default(autoincrement())
  isbn        String
  title       String  
  author      String
  publisher   String?
  review      String?
  user        User        @relation(fields: [userId], references: [email])
  userId      String
  public      Boolean
  createdAt   DateTime    @default(now())
  updatedAt   DateTime?
}